{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
    <h1>Tickets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Finished</th>
                <td>{{ ticket.finished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ ticket.timestamp ? ticket.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tickets_index') }}">back to list</a>

    <a href="{{ path('app_tickets_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('tickets/_delete_form.html.twig') }}
{% endblock %}
