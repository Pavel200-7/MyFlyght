{% extends 'base.html.twig' %}

{% block title %}Airline index{% endblock %}

{% block body %}
    <h1>Airline index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AirlineName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for airline in airlines %}
            <tr>
                <td>{{ airline.id }}</td>
                <td>{{ airline.airlineName }}</td>
                <td>
                    <a href="{{ path('app_airline_show', {'id': airline.id}) }}">show</a>
                    <a href="{{ path('app_airline_edit', {'id': airline.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_airline_new') }}">Create new</a>
{% endblock %}
