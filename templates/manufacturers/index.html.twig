{% extends 'base.html.twig' %}

{% block title %}Manufacturers index{% endblock %}

{% block body %}
    <h1>Manufacturers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ManufacturerName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for manufacturer in manufacturers %}
            <tr>
                <td>{{ manufacturer.id }}</td>
                <td>{{ manufacturer.manufacturerName }}</td>
                <td>
                    <a href="{{ path('app_manufacturers_show', {'id': manufacturer.id}) }}">show</a>
                    <a href="{{ path('app_manufacturers_edit', {'id': manufacturer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_manufacturers_new') }}">Create new</a>
{% endblock %}
