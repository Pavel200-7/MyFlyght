{% extends 'admin/baseAdmin.html.twig' %}


{% block title %}Города{% endblock %}

{% block workPlace %}
    <h1>Города главная</h1>

    <a href="{{ path('app_cities_new') }}" class="aCreate">Создать</a>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Город</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.cityName }}</td>
                <td>
                    <a href="{{ path('app_cities_edit', {'id': city.id}) }}" class="aUpdate">Обновить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей нет</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
