{% extends 'admin/baseAdmin.html.twig' %}


{% block title %}Аккаунты пользователей{% endblock %}

{% block workPlace %}
    <h1>Аккаунты пользователей главная</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Электронная почта</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('app_user_accounts_edit', {'id': user.id}) }}" class="aUpdate">Обновить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записей нет</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
