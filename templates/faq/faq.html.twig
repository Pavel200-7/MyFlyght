{% extends 'base.html.twig' %}

{% block title %}Часто задаваемые вопросы{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/faq.css') }}">

{% endblock %}

{% block body %}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.question').forEach(item => {
                item.addEventListener('click', () => {
                    const answer = item.nextElementSibling;
                    let lastStile = answer.style.display;

                    document.querySelectorAll('.question').forEach(item => {
                        const answer = item.nextElementSibling;

                        answer.style.display = 'none';
                    });

                    answer.style.display = lastStile === 'block' ? 'none' : 'block';
                });
            });
        });
    </script>

    <div class="white_line"></div>

    <div class="faq-container">
        <h1>Часто задаваемые вопросы</h1>
        <div class="faq-list">
            {% for question in questions %}
                <div class="faq-item">
                    <div class="question"><span>{{ question.title }}</span></div>
                    <div class="answer"><span>{{ question.faqBody }}</span></div>
                </div>
            {% endfor %}
        </div>
    </div>








{% endblock %}